{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "es5"],
    "allowJs": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx"
  },
  "include": ["src/index.ts"],
  "exclude": ["node_modules"]
}
